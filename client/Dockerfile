# client/Dockerfile

# ðŸ”µ STEP 1: Base image
FROM node:18-alpine

# ðŸ”µ STEP 2: Working directory
WORKDIR /app

# ðŸ”µ STEP 3: Copy package files
COPY package*.json ./

# ðŸ”µ STEP 4: Install dependencies
RUN npm ci

# ðŸ”µ STEP 5: Copy source code
COPY . .

# ðŸ”µ STEP 6: Expose Vite dev server port
EXPOSE 5173

# ðŸ”µ STEP 7: Start Vite dev server
# --host 0.0.0.0 = Allow access from outside container (IMPORTANT!)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]